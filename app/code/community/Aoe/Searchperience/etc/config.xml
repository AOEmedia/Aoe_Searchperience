<?xml version="1.0" ?>
<config>
    <modules>
        <Aoe_Searchperience>
            <version>0.2.0</version>
        </Aoe_Searchperience>
    </modules>
	<admin>
		<routers>
			<aoe_searchperience>
				<use>admin</use>
				<args>
					<module>Aoe_Searchperience</module>
					<frontName>searchperience</frontName>
				</args>
			</aoe_searchperience>
		</routers>
	</admin>
    <global>
        <blocks>
            <aoe_searchperience>
                <class>Aoe_Searchperience_Block</class>
            </aoe_searchperience>
        </blocks>
        <helpers>
            <aoe_searchperience>
                <class>Aoe_Searchperience_Helper</class>
            </aoe_searchperience>
        </helpers>
		<models>
			<aoe_searchperience>
				<class>Aoe_Searchperience_Model</class>
				<resourceModel>aoe_searchperience_resource</resourceModel>
			</aoe_searchperience>
			<aoe_searchperience_resource>
				<class>Aoe_Searchperience_Model_Resource</class>
				<entities>
					<queue_item>
						<table>aoesearchperience_queue_item</table>
					</queue_item>
				</entities>
			</aoe_searchperience_resource>
		</models>
		<resources>
			<aoe_searchperience_setup>
				<setup>
					<module>Aoe_Searchperience</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</aoe_searchperience_setup>
		</resources>
    </global>

    <frontend>
        <layout>
            <updates>
                <aoe_searchperience>
                    <file>aoe_searchperience.xml</file>
                </aoe_searchperience>
            </updates>
        </layout>
    </frontend>

    <adminhtml>
        <layout>
            <updates>
                <searchperienece>
                    <file>searchperience/searchperience.xml</file>
                </searchperienece>
            </updates>
        </layout>
    </adminhtml>
</config>